<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mainStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/_20mdp</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="textStyleTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_20mdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="spinnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">@string/_weight_one</item>
        <item name="android:layout_marginTop">@dimen/_10mdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="lnrFindFalconeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_5mdp</item>
        <item name="android:layout_marginBottom">@dimen/_10mdp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/lnr_layout_bg</item>
    </style>

    <style name="lnrFindFalconeSolutionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>

    </style>
    <style name="textStyleSubTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_17mdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_5mdp</item>
        <item name="android:layout_marginTop">@dimen/_5mdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="textStyleCommon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_15mdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/_17mdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="iconStyleCommon">
        <item name="android:layout_width">@dimen/_30mdp</item>
        <item name="android:layout_height">@dimen/_30mdp</item>
        <item name="android:textSize">@dimen/_15mdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/_10mdp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:background">@drawable/ic_space_icon</item>
    </style>
    <style name="settingsBottomButton" parent="widgetFontRegular">
        <item name="android:layout_width">@dimen/bottomButtonWidth</item>
        <item name="android:layout_height">@dimen/bottomButtonHeight</item>
        <item name="android:layout_marginTop">@dimen/_30mdp</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/button_find_falcone_round</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="widgetFontRegular">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="iconStyleQueenImage">
        <item name="android:layout_width">@dimen/_60mdp</item>
        <item name="android:layout_height">@dimen/_60mdp</item>
        <item name="android:background">@drawable/ic_queen</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_30mdp</item>


    </style>
</resources>